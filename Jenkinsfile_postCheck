
 pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'TestSuite:' + TestSuite
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo 'TestConfig:' + TestConfig
                script {
                 if(TestConfig == 'fail'){
                    echo 'INSIDE IF'
                    error("Should have thrown an exception")
                 }else{
                   echo 'INSIDE ELSE'
                  }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo 'CqrsConfig:' + CqrsConfig
            }
        }
    }
}
