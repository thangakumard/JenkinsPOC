
 pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'TestSuite:' + TestSuite
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo 'TestConfig:' + TestConfig
                script {
                 if(TestConfig == 'fail'){
                   fail("Should have thrown an exception")
                 }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo 'CqrsConfig:' + CqrsConfig
            }
        }
    }
}
