
 pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'TestSuite:' + TestSuite
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                echo 'TestConfig:' + TestConfig
                if(TestConfig == 'fail'){
                  assert true == false : "failing forcefully"
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                echo 'CqrsConfig:' + CqrsConfig
            }
        }
    }
}
